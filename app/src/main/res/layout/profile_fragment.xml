<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout style="@style/PullDownStyle">

        <androidx.core.widget.NestedScrollView style="@style/ScrollViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/super_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:sCenterViewGravity="left_center"
                    app:sDividerLineType="both"
                    android:paddingStart="10dp"
                    app:sLeftBottomTextString="这里是企业"
                    app:sLeftBottomTextSize="14sp"
                    app:sLeftIconRes="@drawable/head_pic"
                    app:sLeftTopTextString="这里是名字"
                    app:sLeftTopTextSize="18sp"
                    app:sLeftViewGravity="left_center"

                   />


                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/stv_staff"
                    style="@style/InfoItem.Account"
                    app:sLeftTextString="企业管理" />
<!--                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView-->
<!--                    android:id="@+id/info_message"-->
<!--                    style="@style/InfoItem.Account"-->
<!--                    app:sLeftTextString="通知消息" />-->
                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/info_message"
                    android:layout_width="match_parent"
                    style="@style/InfoItem.Account"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    app:sDividerLineType="both"
                    app:sLeftTextString="通知消息"
                    app:sRightIconRes="@drawable/icon_arrow_right_red"
                    app:sRightViewMarginRight="0dp" />

<!--                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView-->
<!--                    style="@style/InfoItem.Account"-->
<!--                    app:sLeftTextString="账号与安全"-->
<!--                    app:sRightTextString="已保护"-->
<!--                    app:sRightTvDrawableLeft="@drawable/icon_crown" />-->

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    style="@style/InfoItem.Account"
                    app:sDividerLineType="none"
                    app:sLeftTextString="设置中心" />


                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    style="@style/InfoItem.Account"
                    android:layout_marginTop="50dp"
                    app:sDividerLineType="none"
                    app:sLeftTextString="意见反馈" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/about_stv"
                    style="@style/InfoItem.Account"
                    android:layout_marginTop="20dp"
                    app:sDividerLineType="none"
                    app:sLeftTextString="关于" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>